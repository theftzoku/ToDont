<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <gradient
                android:angle="45"
                android:startColor="#f2be00"
                android:centerColor="#f2be00"
                android:endColor="#ed8709" />
            <size
                android:width="56dp"
                android:height="56dp" />
        </shape>
    </item>
    <item
        android:left="20dp"
        android:right="20dp">
        <shape android:shape="line">
            <stroke
                android:width="2dp"
                android:color="#000000" />
        </shape>
    </item>
    <item
        android:left="20dp"
        android:right="20dp">
        <rotate
            android:fromDegrees="90">
            <shape android:shape="line">
                <stroke
                    android:width="2dp"
                    android:color="#000000" />
            </shape>
        </rotate>
    </item>
</layer-list>