<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundcolor">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/mygradient"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:background="@drawable/myinnergradient"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal"
                android:weightSum="4">

                <Button
                    android:id="@+id/day"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:text="@string/d"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="1"
                    android:textColor="@color/textcolor"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/week"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:text="@string/w"
                    android:layout_weight="1"
                    android:textColor="@color/textcolor"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/month"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:text="@string/m"
                    android:layout_weight="1"
                    android:textColor="@color/textcolor"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/year"
                    android:layout_width="0dp"
                    android:layout_height="40dp"

                    android:text="@string/y"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:textColor="@color/textcolor"
                    android:textSize="12sp" />

            </LinearLayout>
        </LinearLayout>


        <FrameLayout
                android:id="@+id/containerLogFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="43dp"
                android:background="@drawable/myinnergradientlogs"
                android:gravity="center"
                android:layout_gravity="center"
                android:weightSum="3"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/dhabits"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:gravity="center"

                    android:layout_marginLeft="2dp"
                    android:background="@drawable/continuebutton2"
                    android:text="@string/habits"
                    android:layout_weight="1"
                    android:textColor="@color/textcolor"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/davoided"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:background="@drawable/continuebuttontrans"
                    android:text="@string/avoided"
                    android:layout_weight="1"
                    android:textColor="@color/textcolor"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/ddone"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:background="@drawable/continuebuttontrans"

                    android:text="@string/done"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:textColor="@color/textcolor"
                    android:textSize="12sp" />


            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/containerLogDailyFragment"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />
    </LinearLayout>
</FrameLayout>