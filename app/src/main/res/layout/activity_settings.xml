<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:background="@color/backgroundcolor"
    android:orientation="vertical"
    tools:context=".Settings">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/mygradient"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"

            android:layout_marginLeft="20dp"
            android:background="@drawable/ic_back"
            android:elevation="6dp"
            android:gravity="bottom"
            android:onClick="backBtn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:layout_marginBottom="3dp"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            android:gravity="bottom"
            android:text="@string/settings"
            android:textColor="@color/textcolor"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/appearanceView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:background="@drawable/dis"
            android:elevation="6dp"
            android:gravity="bottom"
            android:onClick="changeMode" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="bottom"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:elevation="6dp"
                android:gravity="center_vertical"
                android:onClick="changeMode"
                android:text="@string/appearance"
                android:textColor="@color/textcolor"
                android:textSize="16sp"

                />

            <TextView
                android:id="@+id/modetitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:onClick="changeMode"
                android:textColor="@color/textcolor"
                android:textSize="14sp"

                />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:elevation="6dp"

            android:gravity="bottom"
            android:onClick="changeMode"
            android:text="@string/data"
            android:textColor="@color/red"
            android:textSize="16sp"

            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/innerfragmentsColor2" />




    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="13dp"
        android:visibility="gone"
        android:id="@+id/viww"
        android:background="@color/innerfragmentsColor2" />

    <LinearLayout
        android:id="@+id/language"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:visibility="gone"
        android:layout_margin="10dp"
        android:elevation="5dp"
        android:orientation="horizontal"
        android:padding="5dp">

        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:background="@drawable/ic_appearance"
            android:elevation="6dp"
            android:gravity="bottom"
            android:onClick="changeMode" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:elevation="6dp"

                android:gravity="bottom"
                android:onClick="changeMode"
                android:text="Language"
                android:textColor="@color/textcolor"
                android:textSize="16sp"

                />

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/spLanguagePicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/languages"
                android:paddingStart="14dp"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:elevation="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/backUpButton"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"


            android:layout_height="wrap_content">
            <Button
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:background="@drawable/frame__4_"
                android:elevation="6dp"
                android:gravity="bottom"
          />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:elevation="6dp"
                android:gravity="center_vertical"
                android:text="@string/back_up"
                android:textColor="@color/textcolor"
                android:textSize="16sp"

                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="64dp"
            android:layout_marginTop="10dp"
            android:background="@color/innerfragmentsColor2" />



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:elevation="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:onClick="restore"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:background="@drawable/frame__5_"
                android:elevation="6dp"
                android:gravity="bottom"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:elevation="6dp"
                android:gravity="center_vertical"
                android:text="@string/restore"
                android:textColor="@color/textcolor"
                android:textSize="16sp"

                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="64dp"
            android:visibility="gone"
            android:background="@color/innerfragmentsColor2" />



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:elevation="6dp"

            android:gravity="bottom"
            android:onClick="changeMode"
            android:text="@string/about"
            android:textColor="@color/red"
            android:textSize="16sp"

            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/innerfragmentsColor2" />




    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:elevation="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:background="@drawable/about"
                android:elevation="6dp"
                android:gravity="bottom"
                android:onClick="aboutus" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:elevation="6dp"
                android:gravity="center_vertical"
                android:onClick="aboutus"
                android:text="@string/about"
                android:textColor="@color/textcolor"
                android:textSize="16sp"

                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:visibility="gone"
            android:layout_marginLeft="64dp"
            android:background="@color/innerfragmentsColor2" />



    </LinearLayout>


</LinearLayout>