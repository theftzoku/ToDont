<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundcolor"
    tools:context=".fragments.FragmentToday">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/mygradient"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/backgorundinner"
                android:elevation="5dp"
                android:gravity="center"

                android:orientation="horizontal"
                android:weightSum="3">

                <Button
                    android:id="@+id/habits"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="2dp"


                    android:layout_gravity="center"
                    android:layout_marginLeft="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/continuebutton2"
                    android:gravity="center"

                    android:text="@string/habits"
                    android:textColor="@color/textcolor"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/avoided"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="2dp"

                    android:layout_marginBottom="2dp"


                    android:layout_weight="1"

                    android:background="@drawable/continuebuttontrans"
                    android:text="@string/avoided"
                    android:textColor="@color/textcolor"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/done"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="2dp"

                    android:layout_marginTop="2dp"
                    android:layout_marginRight="2dp"


                    android:layout_weight="1"
                    android:background="@drawable/continuebuttontrans"
                    android:text="@string/done"
                    android:textColor="@color/textcolor"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/containerTodayFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    </LinearLayout>
</FrameLayout>